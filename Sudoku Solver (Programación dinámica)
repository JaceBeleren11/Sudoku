#Mejenes Chacon Luis Guillermo
import os
import copy
import time
from PIL import Image, ImageDraw, ImageFont

class Celda:
    def __init__(self):
        self.__valor = 0
        self.__fija = False
        self.__opciones = []

    def fijar_valor(self, dato, fija=False):
        if not self.__fija:
            self.__valor = dato
            self.__fija = fija
            self.__opciones = []
            return True
        return False

    def borrar_valor(self):
        if not self.__fija:
            self.__valor = 0
            return True
        return False

    def valor(self):
        return self.__valor

    def valida(self):
        return self.__valor != 0

    def fija(self):
        return self.__fija

    def __str__(self):
        return str(self.__valor) if self.__valor else "_"


class Sudoku:
    def __init__(self):
        self.__tablero = [[Celda() for x in range(9)] for y in range(9)]
        self.__jugadas = []
        self.imagenes = []  # Lista para guardar las imágenes de cada paso
        self.dp = {}  # Tabla de DP para almacenar estados resueltos
        self.cargar_tablero_inicial()  # Cargar el tablero inicial

    def cargar_tablero_inicial(self):
        try:
            os.system("python generador.py > tablero.txt")
            with open("tablero.txt", "r") as f:
                f.readline()
                fila = 0
                while fila < 9:
                    linea = f.readline().split()
                    if linea:
                        for i in range(9):
                            if linea[i] != "_":
                                self.__tablero[fila][i].fijar_valor(int(linea[i]), True)
                        fila += 1
            os.remove("tablero.txt")
        except Exception as e:
            print("Error al cargar el tablero inicial:", e)

    def es_factible(self, fila, columna, valor):
        if 0 < fila < 10 and 0 < columna < 10 and 0 < valor < 10:
            for i in range(9):
                if self.__tablero[fila-1][i].valor() == valor or self.__tablero[i][columna-1].valor() == valor:
                    return False
            f = 3 * ((fila-1) // 3)
            c = 3 * ((columna-1) // 3)
            for i in range(f, f+3):
                for j in range(c, c+3):
                    if self.__tablero[i][j].valor() == valor:
                        return False
            return True
        return False

    def resolver_con_dp(self):
        vacias = self.encontrar_vacias()
        start_time = time.time()
        exito = self.dp_solver(tuple(), vacias, 0)
        end_time = time.time()
        print(f"\nTiempo de resolución: {end_time - start_time:.4f} segundos")
        if exito:
            print("¡Sudoku resuelto con éxito!")
        else:
            print("No se pudo resolver el Sudoku.")
        self.crear_gif("sudoku_resolucion.gif")

    def dp_solver(self, estado, vacias, k):
        # Convertimos el tablero actual en un estado representable (tuplas)
        if k >= len(vacias):
            return True  # Solución completa

        if estado in self.dp:
            return self.dp[estado]  # Devuelve el resultado almacenado

        fila, columna = vacias[k]
        for valor in range(1, 10):
            if self.es_factible(fila + 1, columna + 1, valor):
                self.__tablero[fila][columna].fijar_valor(valor)
                self.guardar_imagen()

                nuevo_estado = self.estado_actual()
                if self.dp_solver(nuevo_estado, vacias, k + 1):
                    self.dp[estado] = True  # Almacenar resultado en DP
                    return True

                self.__tablero[fila][columna].borrar_valor()
                self.guardar_imagen()

        self.dp[estado] = False  # Estado actual no conduce a solución
        return False
    
    def estado_actual(self):
        # Devuelve una representación del estado actual del tablero como tupla de tuplas
        return tuple(
            tuple(self.__tablero[i][j].valor() for j in range(9))
            for i in range(9)
        )
    
    def es_factible(self, fila, columna, valor):
        if 0 < fila < 10 and 0 < columna < 10 and 0 < valor < 10:
            for i in range(9):
                if self.__tablero[fila-1][i].valor() == valor or self.__tablero[i][columna-1].valor() == valor:
                    return False
            f = 3 * ((fila-1) // 3)
            c = 3 * ((columna-1) // 3)
            for i in range(f, f+3):
                for j in range(c, c+3):
                    if self.__tablero[i][j].valor() == valor:
                        return False
            return True
        return False

    def encontrar_vacias(self):
        vacias = []
        for i in range(9):
            for j in range(9):
                if not self.__tablero[i][j].valida():
                    vacias.append((i, j))
        return vacias 

    def guardar_imagen(self):
        """Convierte el estado actual del tablero en una imagen y la guarda."""
        img = Image.new("RGB", (270, 270), "white")
        draw = ImageDraw.Draw(img)
        font = ImageFont.load_default()

        for i in range(9):
            for j in range(9):
                x, y = j * 30, i * 30
                valor = str(self.__tablero[i][j].valor()) if self.__tablero[i][j].valida() else "_"
                draw.text((x + 10, y + 5), valor, fill="black", font=font)

                # Dibujar las líneas de la cuadrícula
                if j % 3 == 0:
                    draw.line([(x, 0), (x, 270)], fill="black", width=2)
                if i % 3 == 0:
                    draw.line([(0, y), (270, y)], fill="black", width=2)
            draw.line([(270, 0), (270, 270)], fill="black", width=2)
            draw.line([(0, 270), (270, 270)], fill="black", width=2)

        self.imagenes.append(img)

    def crear_gif(self, filename):
        """Crea un GIF a partir de las imágenes almacenadas en `self.imagenes`."""
        if self.imagenes:
            self.imagenes[0].save(filename, save_all=True, append_images=self.imagenes[1:], loop=0, duration=500)
            print(f"GIF guardado como {filename}")

    def __str__(self):
        tablero = ""
        for i in range(9):
            if i % 3 == 0:
                tablero += "-------------------------\n"
            for j in range(9):
                if j % 3 == 0:
                    tablero += "| "
                tablero += str(self.__tablero[i][j]) + " "
            tablero += "|\n"
        tablero += "-------------------------\n"
        return tablero


def main():
    sudoku = Sudoku()
    print("Tablero inicial:")
    print(sudoku)
    print("Resolviendo Sudoku...\n")
    sudoku.resolver_con_dp()


if __name__ == '__main__':
    main()
